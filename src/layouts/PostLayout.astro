---
import BaseLayout from './BaseLayout.astro'

const { frontmatter } = Astro.props
const date = new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
  month: 'long',
  day: '2-digit',
  year: 'numeric',
})
---

<BaseLayout title={frontmatter.title + ' | Ricardo Chu'}>
  <header class='w-full mx-auto space-y-4 text-center'>
    <h1 class='text-4xl font-bold leading-tight md:text-5xl'>
      {frontmatter.title}
    </h1>
    <p class='text-xs font-semibold tracking-wider uppercase flex gap-3 justify-center'>
      {frontmatter.tags.map((tag) => <span>#{tag}</span>)}
    </p>
    <p class='text-sm dark:text-gray-400'>
      by
      <a rel='noopener noreferrer' href='#' target='_blank' class='underline dark:text-violet-400'>
        <span itemprop='name'>{frontmatter.author}</span>
      </a> on
      <time datetime='2021-02-12 15:34:18-0200'>{date}</time>
    </p>
    <div class='max-w-screen-lg mx-auto mt-16 overflow-hidden rounded-none lg:rounded-lg'>
      <img class='w-full' src={frontmatter.image.url} alt={frontmatter.image.alt} />
    </div>
  </header>

  <section class='px-12 my-12'>
    <slot />
  </section>
</BaseLayout>
