---
import BaseLayout from './BaseLayout.astro'
import ProjectButtons from '../components/ProjectButtons.astro'
const {
  frontmatter: { title, tags, image, pubDate, link },
} = Astro.props

const date = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
})
---

<BaseLayout title={title + ' | Ricardo Chu'}>
  <header class='w-full mx-auto space-y-4 text-center'>
    <h1 class='text-4xl font-bold leading-tight md:text-5xl'>
      {title}
    </h1>
    <p class='text-xs font-semibold tracking-wider uppercase flex gap-3 justify-center'>
      {tags.map((tag) => <span>#{tag}</span>)}
    </p>
    <p class='text-sm dark:text-gray-400'>
      <time datetime='2021-02-12 15:34:18-0200'>{date}</time>
    </p>
    <div class='max-w-screen-lg mx-auto mt-16 overflow-hidden rounded-none lg:rounded-lg'>
      <img class='w-full' src={image.url} alt={image.alt} />
    </div>

    <!-- Buttons -->
    {link && <ProjectButtons link={link} />}
  </header>

  <article class='px-12 my-12'>
    <slot />
  </article>
</BaseLayout>

<style is:global>
  /* @apply leading mb-6 text-gray-300 */
  article {
    line-height: 1.5;
    font-size: 17px;
    color: rgb(55, 65, 81)
  }
  .dark article {
    color: rgb(209, 213, 219)
  }
  p {
    margin: 1.5rem 0;
  }
  h2 {
    font-size: 2.25rem /* 20px */;
    line-height: 2.5rem /* 28px */;
    font-weight: 600;
    margin: 1.5rem 0;
  }
  h3, h4, h5, h6 {
    font-size: 1.25rem /* 20px */;
    line-height: 2.5rem /* 28px */;
    font-weight: 600;
    margin: 1.5rem 0;
  }
  ul {
    padding-left: 2em;
    list-style-type: disc;
  }
</style>