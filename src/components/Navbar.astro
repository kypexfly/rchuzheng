---
import ThemeSwitcher from "./ThemeSwitcher";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split('/')[1]
// dark:bg-gray-800 header
---

<header class="px-4 md:px-2 dark:text-gray-100">
	<div class="container flex justify-between h-16 mx-auto">
		<a rel="noopener noreferrer" href="/" aria-label="Back to homepage" class="flex items-center font-bold">
			ðŸ’» Ricardo Chu
		</a>
		<ul class="items-stretch hidden space-x-3 lg:flex">
			<li class="flex">
				<a rel="noopener noreferrer" href="/" class={`${currentPath === "" ? "active" : " "} flex items-center px-2 font-semibold`}>Home</a>
			</li>
			<li class="flex">
				<a rel="noopener noreferrer" href="/projects" class={`${currentPath === "projects" ? "active" : " "} flex items-center px-2 font-semibold`}>Projects</a>
			</li>
			<li class="flex">
				<a rel="noopener noreferrer" href="/blog" class={`${currentPath === "blog" ? "active" : " "} flex items-center px-2 font-semibold`}>Blog</a>
			</li>
		</ul>
		
		<div class="items-center flex-shrink-0 hidden lg:flex">
			<ThemeSwitcher client:load />
		</div>
		<!-- Humburger Icon -->
		<button class="p-4 lg:hidden">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6 dark:text-gray-100">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</div>
</header>

<style>
	.active, .dark .active {
		border-color: #0d6efd;
		color: #0d6efd;
	}
</style>