---
import { ArrowNarrowRight } from 'tabler-icons-react'
const { title, description, pubDate, url } = Astro.props
const date = new Date(pubDate).toLocaleDateString('en-US', {
  month: 'long',
  day: '2-digit',
  year: 'numeric',
})
---

<div class='pt-6 pb-4 space-y-2'>
  <time datetime={pubDate}>{date}</time>
  <h1 class='text-3xl font-bold'>{title}</h1>
  <p class='text-gray-700 dark:text-gray-300'>
    {description}
  </p>
  <a rel='noopener noreferrer' href={url} class='inline-flex items-center py-2 space-x-2 text-sm text-blue-600'>
    <span>Read more</span>
    <ArrowNarrowRight />
  </a>
</div>
