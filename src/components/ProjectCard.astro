---
const { title, description, url, image, pubDate } = Astro.props
const date = new Date(pubDate).toLocaleDateString('en-US', {
  month: 'long',
  day: '2-digit',
  year: 'numeric',
})
---

<article class='overflow-hidden rounded-lg shadow transition-all duration-200 ease-in-out transform hover:shadow-lg hover:scale-105'>
  <!-- class="transition-all duration-200 ease-in-out transform hover:scale-105 hover:shadow-lg" -->
  <a href={url}>
    <img alt={image.alt} src={image.url} class='h-56 w-full object-cover' />

    <div class='bg-white dark:bg-gray-800 p-4 sm:p-6'>
      <time datetime={pubDate} class='block text-xs text-gray-500'>{date}</time>

      <h3 class='mt-0.5 text-lg text-gray-900 dark:text-gray-100 font-semibold'>
        {title}
      </h3>

      <p class='mt-2 text-sm leading-relaxed text-gray-500 line-clamp-3'>
        {description}
      </p>
    </div>
  </a>
</article>
