---
import ProjectCard from '../components/ProjectCard.astro'
import Layout from '../layouts/BaseLayout.astro'
const allProjects = await Astro.glob('./projects/*.md')
---

<Layout title='Projects | Ricardo Chu'>
  <header class='text-center sm:text-left'>
    <h3 class='mb-6 text-gray-800 dark:text-gray-200 text-3xl font-bold tracking-tight sm:text-5xl'>
      Projects
    </h3>
    <p class='max-w-prose mb-10 font-normal text-gray-700 dark:text-gray-300 leading-relaxed'>
      Some projects I've worked using top frameworks and good practices.
    </p>
  </header>

  <ul class='grid grid-cols-1 gap-5 md:grid-cols-2 sm:gap-8'>
    {
      allProjects.map((project) => {
        const { title, description, image, pubDate } = project.frontmatter
        return (
          <ProjectCard
            title={title}
            description={description}
            image={image}
            pubDate={pubDate}
            url={project.url}
          />
        )
      })
    }
  </ul>
</Layout>
